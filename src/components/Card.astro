---
import { Button } from "@/components/ui/button"
import { ExternalLink } from "lucide-react"
const { title, app, repo, image } = Astro.props
---

<div
	class="flex flex-col md:flex-row bg-card rounded-lg shadow-md overflow-hidden max-w-80 md:max-w-2xl mx-auto"
>
	<div class="md:w-1/2">
		<img
			alt="mid typing"
			class="w-80 object-cover"
			src={image}
		/>
	</div>
	<div class="w-80 flex flex-col gap-1 p-8 space-y-4 md:w-1/2">
		<h3 class="text-2xl font-bold mt-2">{title}</h3>
        <slot />
		<div>
			<a href={app}>
				<Button variant="secondary">
					App <ExternalLink className="ml-1 h-3 w-3" />
				</Button>
			</a>
			<a href={repo}>
				<Button variant="secondary">
					Repo <ExternalLink className="ml-1 h-3 w-3" />
				</Button>
			</a>
		</div>
	</div>
</div>
