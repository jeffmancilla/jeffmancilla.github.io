---
import Projects from "../components/Projects.astro"
import BaseLayout from "../layouts/BaseLayout.astro"

const title = "Jeff Mancilla"
const description = "Portfolio"
const permalink = Astro.site!.href
---

<BaseLayout title={title} description={description} permalink={permalink}>
	<div class="flex flex-col gap-20">
		<section
			class="flex flex-1 justify-center items-center flex-col md:flex-row"
		>
			<div class="text-pretty text-center md:text-start">
				<h1 class="text-6xl font-bold">hoy 👋🏽</h1>
				<p class="mt-8">
					I'm <strong class="text-accent">Jeff Mancilla</strong>—a full-stack
					developer and technologist based in Houston, TX.
				</p>
				<p class="mt-4">
					Come check out some of <a href="#projects">my projects</a> and let's connect!
				</p>
				<div class="mt-8 flex gap-2 justify-center md:justify-start">
					<a class="btn btn-primary" href="https://linkedin.com/in/jeffmancilla"
						>LinkedIn</a
					>
					<a class="btn btn-neutral" href="https://github.com/jeffmancilla"
						>GitHub</a
					>
				</div>
			</div>
			<div class="max-w-sm md:min-w-sm">
				<picture>
					<source
						srcset="/assets/jeffm-cartoon.webp"
						media="(min-width: 420px)"
					/>
					<img
						class="hero-image"
						alt="cartoon Jeff in East Asia"
						src="/assets/jeffm-cartoon.webp"
					/>
				</picture>
			</div>
		</section>
		<section>
			<h2 id="projects" class="text-center text-4xl font-bold mb-8">
				Projects
			</h2>
			<Projects />
		</section>
	</div>
</BaseLayout>
