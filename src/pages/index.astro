---
import Layout from '../layouts/portfolio.astro'
import { Mail, FileText, ExternalLink } from 'lucide-react'
import { Button } from '@/components/ui/button'
import { Badge } from '@/components/ui/badge'
import { Separator } from '@/components/ui/separator.tsx'
import Card from '@/components/Card.astro'
---

<Layout>
	<section>
		<img
			class="mx-auto w-48 border-foreground border-2 rounded-full shadow"
			src="/assets/jeffm.png"
			alt="Jeff's headshot"
		/>
		<p class="block text-5xl">
			I'm <h1
				class="bg-clip-text text-transparent bg-gradient-to-r from-primary from-40% to-foreground inline text-5xl font-bold p-0"
			>
				Jeff Mancilla
			</h1>
		</p>
		<p class="text-3xl font-bold text-primary">
			Full-stack Developer Â· Technologist
		</p>
	</section>
	<Separator />
	<section id="about">
		<p class="text-lg text-center">
			I love to build experiences with efficient UI and scalability in mind.
			Previously in the higher education space with over ten years of experience
			in ServiceNow development, building web content, ensuring web
			accessibility, IT service management and system administration.
		</p>
		<p class="text-lg text-center">
			Check out my some of my projects below and lets connect!
		</p>
		<div class="flex flex-wrap justify-center gap-2">
			<a href="https://linkedin.com/in/jeffmancilla">
				<Button>
					LinkedIn
				</Button>
			</a>
			<a href="https://github.com/jeffmancilla">
				<Button>
					GitHub
				</Button>
			</a>
			<a href="mailto:jeffmancilla@outlook.com">
				<Button variant="outline">
					<Mail className="mr-2 h-4 w-4" />jeffmancilla@outlook.com
				</Button>
			</a>
		</div>
		<!-- <div class="flex flex-wrap justify-center gap-4">
			<a href="/Jeff-Mancilla-resume.docx">
				<Button variant="outline">
					<FileText className="mr-2 h-4 w-4" />Resume
				</Button>
			</a>
		</div> -->
	</section>
	<Separator />
	<section id="projects">
		<h2 class="text-4xl font-extrabold">Projects</h2>
		<div class="flex flex-col gap-8">
			<Card
				title="Recipes (working title)"
				app="https://exquisite-klepon-51cda7.netlify.app"
				repo="https://github.com/jeffmancilla/recipes"
				image="/assets/recipes.webp"
			>
				<div>
					<Badge variant="outline">React</Badge>
					<Badge variant="outline">Vite</Badge>
					<Badge variant="outline">REST</Badge>
				</div>
				<p>A recipe catalog - minimally designed, fast, and easy to follow</p>
			</Card>
			<Card
				title="Tender"
				app="https://tender-f3bf64ad9858.herokuapp.com"
				repo="https://github.com/valenium/Tinder-But-For-Restaurants"
				image="/assets/tender.webp"
			>
				<div>
					<Badge variant="outline">Express</Badge>
					<Badge variant="outline">EJS</Badge>
					<Badge variant="outline">REST</Badge>
				</div>
				<p>Find your next meal (Tinder but for restaurants)</p>
			</Card>
			<Card
				title="Mid Typing"
				app="https://jeffmancilla.github.io/mid-typing-game"
				repo="https://github.com/jeffmancilla/mid-typing-game"
				image="/assets/mid-typing.webp"
			>
				<div>
					<Badge variant="outline">JavaScript</Badge>
					<Badge variant="outline">CSS</Badge>
					<Badge variant="outline">HTML</Badge>
				</div>
				<p>Speed typing game with a Souls-like twist</p>
			</Card>
		</div>
	</section>
	<Separator />
	<section id="skills">
		<h2 class="text-4xl font-extrabold">Skills</h2>
		<ul class="flex flex-col align-center">
			<li>React</li>
			<li>Svelte</li>
			<li>Astro</li>
			<li>Typescript</li>
			<li>Tailwind</li>
			<li>CSS</li>
			<li>HTML5</li>
			<li>Python</li>
			<li>ServiceNow</li>
		</ul>
	</section>

	<style>
		section {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 1rem;
			margin-block: 2.5rem;
		}
		section p {
			text-align: center;
		}
		h2 {
			margin-bottom: 1rem;
		}
		p {
			text-wrap: pretty;
		}
	</style>
</Layout>
