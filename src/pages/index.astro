---
import Layout from '../layouts/portfolio.astro'
import { Mail, FileText, ExternalLink } from 'lucide-react'
import { Button } from '@/components/ui/button'
import { Badge } from '@/components/ui/badge'
import { Separator } from '@/components/ui/separator.tsx'
---

<Layout>
	<section id="about">
		<img
			class="mx-auto w-48 border-foreground border-2 rounded-full shadow"
			src="/assets/jeffm.png"
			alt="Jeff's headshot"
		/>
		<p class="inline-block text-5xl">
			I'm <h1
				class="bg-clip-text text-transparent bg-gradient-to-r from-primary from-40% to-foreground inline text-5xl font-bold p-0"
			>
				Jeff Mancilla
			</h1>
		</p>
		<h2 class="text-3xl font-bold text-primary">
			Full-stack Developer Â· Technologist
		</h2>
		<p>
			I love to build experiences with efficient UI and scalability in mind.
			Previously in the higher education space with over ten years of experience
			in ServiceNow development, building web content, ensuring web
			accessibility, IT service management and system administration.
		</p>
		<p>Check out my some of my projects below and lets connect!</p>
		<div class="flex flex-wrap justify-center gap-4">
			<a href="mailto:jeffmancilla@outlook.com">
				<Button>
					<Mail className="mr-2 h-4 w-4" />jeffmancilla@outlook.com
				</Button>
			</a>
			<a href="/Jeff-Mancilla-resume.docx">
				<Button variant="outline">
					<FileText className="mr-2 h-4 w-4" />Resume
				</Button>
			</a>
		</div>
	</section>
	<Separator />
	<section id="projects">
		<h2 class="text-4xl font-extrabold">Projects</h2>
		<div class="flex flex-col gap-8">
			<div
				class="flex flex-col md:flex-row bg-card rounded-lg shadow-md overflow-hidden max-w-80 md:max-w-2xl mx-auto"
			>
				<div class="md:w-1/2">
					<img
						alt="recipes"
						class="w-80 object-cover"
						src="/assets/recipes.webp"
					/>
				</div>
				<div class="w-80 flex flex-col gap-2 p-8 space-y-4 md:w-1/2">
					<h3 class="text-2xl font-bold">Recipes (working title)</h3>
					<div>
						<Badge variant="outline">React</Badge>
						<Badge variant="outline">Vite</Badge>
						<Badge variant="outline">REST</Badge>
					</div>
					<p>A recipe catalog - minimally designed, fast, and easy to follow</p>
					<div>
						<a href="https://exquisite-klepon-51cda7.netlify.app">
							<Button variant="secondary">
								App<ExternalLink className="ml-1 h-3 w-3" />
							</Button>
						</a>
						<a href="https://github.com/jeffmancilla/recipes">
							<Button variant="secondary">
								Repo<ExternalLink className="ml-1 h-3 w-3" />
							</Button>
						</a>
					</div>
				</div>
			</div>
			<div
				class="flex flex-col md:flex-row bg-card rounded-lg shadow-md overflow-hidden max-w-80 md:max-w-2xl mx-auto"
			>
				<div class="md:w-1/2">
					<img
						alt="tender"
						class="w-80 object-cover"
						src="/assets/tender.webp"
					/>
				</div>
				<div class="w-80 flex flex-col gap-2 p-8 space-y-4 md:w-1/2">
					<h3 class="text-2xl font-bold">Tender</h3>
					<div>
						<Badge variant="outline">Express</Badge>
						<Badge variant="outline">EJS</Badge>
						<Badge variant="outline">REST</Badge>
					</div>
					<p>Find your next meal (Tinder but for restaurants)</p>
					<div>
						<a href="https://tender-f3bf64ad9858.herokuapp.com">
							<Button variant="secondary">
								App<ExternalLink className="ml-1 h-3 w-3" />
							</Button>
						</a>
						<a href="https://github.com/valenium/Tinder-But-For-Restaurants">
							<Button variant="secondary">
								Repo<ExternalLink className="ml-1 h-3 w-3" />
							</Button>
						</a>
					</div>
				</div>
			</div>
			<div
				class="flex flex-col md:flex-row bg-card rounded-lg shadow-md overflow-hidden max-w-80 md:max-w-2xl mx-auto"
			>
				<div class="md:w-1/2">
					<img
						alt="mid typing"
						class="w-80 object-cover"
						src="/assets/mid-typing.webp"
					/>
				</div>
				<div class="w-80 flex flex-col gap-2 p-8 space-y-4 md:w-1/2">
					<h3 class="text-2xl font-bold">Mid Typing</h3>
					<div>
						<Badge variant="outline">JavaScript</Badge>
						<Badge variant="outline">CSS</Badge>
						<Badge variant="outline">HTML</Badge>
					</div>
					<p>Speed typing game with a Souls-like twist</p>
					<div>
						<a href="https://jeffmancilla.github.io/mid-typing-game">
							<Button variant="secondary">
								App <ExternalLink className="ml-1 h-3 w-3" />
							</Button>
						</a>
						<a href="https://github.com/jeffmancilla/mid-typing-game">
							<Button variant="secondary">
								Repo <ExternalLink className="ml-1 h-3 w-3" />
							</Button>
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>
	<Separator />
	<section id="skills">
		<h2 class="text-4xl font-extrabold">Skills</h2>
		<ul>
			<li>React</li>
			<li>Svelte</li>
			<li>Astro</li>
			<li>Typescript</li>
			<li>Tailwind</li>
			<li>CSS</li>
			<li>HTML5</li>
			<li>Python</li>
			<li>ServiceNow</li>
		</ul>
	</section>

	<style>
		section {
			text-align: center;
			margin-block: 3rem;
		}
		#about > * {
			margin-block: 1rem;
		}
		h2 {
			margin-bottom: 1rem;
		}
	</style>
</Layout>
