<style>
  a {
    text-decoration: none;
    color: var(--accent-2);
  }
  nav a:hover {
    color: currentColor;
  }
  a:visited {
    color: var(--accent-2);
  }
  nav {
    margin-bottom: 2rem;
    border-bottom: 1px groove currentColor/0.5;
  }
  footer {
    margin-top: 2rem;
  }

  /* main menu styling */
  nav * {
    font-size: 1rem;
    text-transform: uppercase;
    font-weight: 700;
    margin: 0;
  }
  nav ul {
    display: flex;
    justify-content: space-between;
    align-items: center;
    list-style: none;
    padding-left: 0;
  }

  nav > ul li:nth-of-type(2) {
    flex-grow: 1;
  }
  nav img {
    width: 1.1rem;
    border-radius: 50%;
    vertical-align: top;
  }
</style>
<style is:global>
  /* the props */
  @import 'https://unpkg.com/open-props';

  /* optional imports that use the props */
  @import 'https://unpkg.com/open-props/normalize.min.css';
  @import 'https://unpkg.com/open-props/buttons.min.css';

  /* fonts */
  @import url('https://fonts.googleapis.com/css2?family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&family=Ubuntu:wght@300;500&display=swap');

  * {
    box-sizing: border-box;
  }

  :root {
    /* --text: hsl(0, 0%, 0%);
    --text-2: hsl(0, 0%, 10%);
    --background: hsl(0, 0%, 95%); */
    --accent: hsl(200, 50%, 50%);
    --accent-2: hsl(200, 50%, 15%);
    --accent-gradient: linear-gradient(
      60deg,
      var(--accent),
      var(--accent-2) 25%,
      currentColor 75%
    );
    --max-width: 768px;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      /* --text: hsl(0, 0%, 95%);
      --text-2: hsl(0, 0%, 90%);
      --background: hsl(0, 0%, 5%); */
      --accent-2: hsl(200, 50%, 85%);
    }
  }

  html {
    font-family: 'Ubuntu', var(--font-sans), sans-serif;
    /* color: var(--text);
    background: var(--background); */
  }
  code {
    font-family: 'Ubuntu Mono', monospace;
  }
  body {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1rem;
  }
  h2 {
    color: var(--accent-2)
  }

</style>
