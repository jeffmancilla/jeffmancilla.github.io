---
const { title } = Astro.props

const navItems = [
	{
		href: '/#projects',
		innerHTML: 'Projects',
	},
]
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title || 'Jeff Mancilla'}</title>
	</head>
	<body>
		<header>
			<nav>
				<a href="/"><img src="./assets/jeffm-logo.png" /> JeffM</a>
				<div>
					{
						navItems.map((item) => {
							return <a href={item.href}>{item.innerHTML}</a>
						})
					}
				</div>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>footer</footer>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Ubuntu&display=swap');

	:root {
		--dark: hsl(0, 0%, 5%);
		--light: hsl(0, 0%, 95%);
		--accent-1: hsl(240, 100%, 50%);
		--accent-2: hsl(0, 75%, 50%);

		--text: var(--dark);
		--background: var(--light);
	}
	@media (prefers-color-scheme: dark) {
		:root {
			--text: var(--light);
			--background: var(--dark);
		}
	}

	html {
		color: var(--text);
		background: var(--background);
		font-family: 'Ubuntu', sans-serif;
	}
	a {
		color: color-mix(in lch, var(--text) 50%, var(--accent-1) 50%);
		&:visited {
			color: color-mix(in lch, var(--text) 75%, var(--accent-1) 25%);
		}
		&:hover {
			color: color-mix(in lch, var(--text) 75%, var(--accent-1) 25%);
		}
	}
	h1,
	h2,
	h3,
	p {
		margin: 0;
		margin-bottom: 1rem;
	}
</style>

<style>
	body {
		margin: auto;
		width: min(90vw, 70ch);
	}
	header,
	main,
	footer {
		padding: 1rem;
	}
    header {
        padding-bottom: 0;
    }
    footer {
        padding-top: 0;
    }
	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		border-bottom: 1px solid color-mix(in srgb, currentColor 20%, transparent);

		& div:last-of-type {
			display: flex;
			justify-content: flex-end;
		}

		& a {
			padding: 0.25rem;
			text-decoration: none;
			color: var(--text);
			line-height: 1rem;
			& img {
				height: 1rem;
				margin-right: 0.25rem;
				border-radius: 1rem;
			}
		}
		& > :not(a:first-of-type) {
			font-weight: 400;
			opacity: 0.8;
			&:hover {
				opacity: 1;
				font-weight: 600;
			}
			& :visited {
				color: var(--text);
			}
		}
	}
</style>
