---
const { title } = Astro.props

const navItems = [
	{
		href: '/#projects',
		text: 'Projects',
	},
	{
		href: '/advent-of-svelte-2023',
		text: 'Advent of Svelte',
	},
	{
		href: '/palette',
		text: 'Palette',
	},
]
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title || 'Jeff Mancilla'}</title>
	</head>
	<body>
		<header>
			<nav>
				<a href="/">JeffM .</a>
				<div>
					{
						navItems.map((item) => {
							return <a href={item.href}>{item.text}</a>
						})
					}
				</div>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>Built with Astro</footer>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Ubuntu&display=swap');

	:root {
		--dark: hsl(0, 0%, 15%);
		--light: hsla(0, 0%, 100%, 0.85);
		--accent-1: #3f7cac;
		--accent-2: #6a8eae;
		--humanist: Seravek, 'Gill Sans Nova', Ubuntu, Calibri, 'DejaVu Sans', source-sans-pro, sans-serif;
		--classical-humanist: Optima, Candara, 'Noto Sans', source-sans-pro, sans-serif;

		--text: var(--dark);
		--background: var(--light);
	}
	@media (prefers-color-scheme: dark) {
		:root {
			--text: var(--light);
			--background: var(--dark);
		}
	}

	html {
		color: var(--text);
		background: var(--background);
		font-family: var(--humanist);
		a {
			color: color-mix(in lch, var(--text) 50%, var(--accent-1) 50%);
			&:visited {
				color: color-mix(in lch, var(--text) 75%, var(--accent-1) 25%);
			}
			&:hover {
				color: color-mix(in lch, var(--text) 75%, var(--accent-1) 25%);
			}
		}
	}
	h1,
	h2,
	h3,
	p {
		margin: 0;
		margin-bottom: 1rem;
	}
	section {
		margin-bottom: 1rem;
	}
</style>

<style>
	body {
		margin: auto;
		width: min(90vw, 70ch);
		height: 100dvh;

		display: flex;
		flex-direction: column;

		& > :is(header, main, footer) {
			padding: 1rem;
		}
		& header {
			padding-bottom: 0;
		}
		& main {
			flex-grow: 1;
		}
		& footer {
			padding-top: 0;
			text-align: center;
			opacity: .5;
			font-weight: 300;
		}
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;


		& div:last-of-type {
			display: flex;
			justify-content: flex-end;
		}

		& a {
			padding: 0.5rem;
			text-decoration: none;
			font-weight: 300;
			color: var(--text);
			opacity: 0.8;
			& img {
				height: 1rem;
				margin-right: 0.25rem;
				border-radius: 1rem;
			}
			&:hover {
				opacity: 1;
			}
			& :visited {
				color: var(--text);
			}
		}
		&:first-child > a {
			opacity: 1;
			font-weight: 400;
		}
	}
</style>
